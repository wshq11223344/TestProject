<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--&lt;!&ndash;状态栏透明设置 必须是4.4以上的版本&ndash;&gt;-->
        <!--<item name="android:windowTranslucentStatus">false</item>-->
         <!--&lt;!&ndash;虚拟按键透明设置 &ndash;&gt;-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
         <!--&lt;!&ndash;5.0以上设置状态栏的颜色  但是必须是windowTranslucentStatus为false  &ndash;&gt;-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->


        <!--过渡动画-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/activity_fade</item>
        <item name="android:windowExitTransition">@transition/activity_slide</item>

        <!--使用共享元素过渡动画-->
<!--        <item name="android:windowSharedElementEnterTransition">@transition/changebounds</item>-->
<!--        <item name="android:windowSharedElementExitTransition">@transition/changebounds</item>-->

        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>

    <style name="LaunchTest" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@mipmap/ic_banner_start</item>
        <!--<item name="android:windowDisablePreview">true</item>-->

        <!--设置后启动会有延迟的情况出现-->
        <!--<item name="android:windowIsTranslucent">true</item>-->

    </style>

    <style name="FloatActivity" parent="android:style/Theme.Dialog"> </style>


    <style name="Base.Widget.Design.TabLayouts" parent="android:Widget" tools:override="true">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIconTint">@null</item>
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorAnimationDuration">@integer/design_tab_indicator_anim_duration_ms</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicator">@drawable/mtrl_tabs_default_indicator</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabRippleColor">?attr/colorControlHighlight</item>
        <item name="tabUnboundedRipple">false</item>
    </style>


</resources>
